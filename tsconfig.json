{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "target": "ES2018",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["ES6", "DOM"],
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}